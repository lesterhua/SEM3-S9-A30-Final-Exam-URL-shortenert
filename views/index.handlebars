<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <i class="fas fa-link text-center mb-4" style="font-size: 100px;"></i>
      <form action="/" method="POST">
        <div class="form-group">
          <label for="link">請輸入網址</label>
          <input type="text" class="form-control" id="link" name="link" value="{{site.link}}"
            placeholder="input URL here">
          <button type="submit" class="btn btn-outline-primary btn-block mt-3">Shorten</button>
        </div>
      </form>
      {{#if site}}
      <div class="row mt-5">
        <div class="col-md-3">
          <p class="lead">縮網址是:</p>
        </div>
        <div class="col-md-9">
          <h3 class="text-danger">localhost:3000/{{site.url}}</h3>
        </div>
      </div>
      {{/if}}
    </div>
  </div>
</div>